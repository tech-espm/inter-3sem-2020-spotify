<%- include("navbar") %>
    <div class=container-fluid>
        <div class="row">
            <div class="col-sm-6">
                <form id="form" class="panel panel-default" action="#">
                    <label for="nome"></label>
                    <input type="text" id="nome" name="nome" value="<%= nome%>" class="form-control" />
                    <label for="email"></label>
                    <input type="text" id="email" name="email" value="<%= email%>" class="form-control" />
                    <label for="telefone"></label>
                    <input type="text" id="telefone" name="telefone" value="<%= telefone%>" class="form-control" />
                <input type="submit" class="btn btn-primary btn-lg btn-block"/>
            </form>
            </div>    
        </div>

    </div>

<script type="text/javascript">	
$(document).ready(function() {
    $('form').submit(function(event){
        var form = {
            nome = $('nome').val(),
            email = $('email').val(),
            telefone = $('telefone').val()
        };
             $.ajax({
                    url: "/api/alterar",
                    method: "POST",
                    data: $(form).serialize(),
                    success: function(data) {
                     alert("Enviado")
                    },
                    error: function() {
                     alert("Erro")
                    }
                });  

                event.preventDefault();
            });
        });

</script>